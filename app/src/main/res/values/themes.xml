<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeuPrimeiroApp" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_claro</item><!--Cor primária-->
        <item name="colorPrimaryVariant">@color/orange_claro</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item><!--Cor secundária-->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/orange</item><!--Cor da barra de status do texto-->
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/azul_extra_claro</item><!--Cor de fundo da janela-->
        <item name="android:textColor">@color/azul_escuro</item><!--Cor dos textos simples-->
        <item name="android:textColorPrimary">@color/cinza_escuro</item><!--Cor do texto da barra de ações, vale ressaltar que só funcionará se o tema não for Dark-->
    </style>
</resources>